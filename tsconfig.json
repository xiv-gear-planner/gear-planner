{
  "compilerOptions": {
    "target": "es2022",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "module": "nodenext",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "composite": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "*.d.ts"
  ],
}