{
  "compilerOptions": {
    "target": "es2022",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "module": "nodenext",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "composite": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "*.d.ts"
  ],
  "references": [
    {
      "path": "./packages/backend-resolver"
    },
    {
      "path": "./packages/common-ui"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/data-api-client"
    },
    {
      "path": "./packages/frontend"
    },
    {
      "path": "./packages/i18n"
    },
    {
      "path": "./packages/math-frontend"
    },
    {
      "path": "./packages/util"
    },
    {
      "path": "./packages/xivmath"
    }
  ]
}