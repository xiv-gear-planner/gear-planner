{
  "name": "gearplan",
  "version": "1.0.0",
  "devDependencies": {
    "@bessonovs/set-project-references": "^0.0.10",
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin-js": "^2.13.0",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.27.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-named-import-spacing": "^1.0.3",
    "http-server": "^14.1.1",
    "nyc": "^17.1.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-less": "^3.0.1",
    "stylelint-less": "^3.0.1",
    "swagger-typescript-api": "^13.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "webpack-bundle-analyzer": "^5.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "scripts": {
    "build": "pnpm -r build",
    "buildprod": "pnpm -r buildprod",
    "docs": "pnpm -r exec typedoc --json build/docs.json --exclude '**/scripts/test/**/*.ts' --excludePrivate --entryPointStrategy expand src/ && pnpm exec typedoc --entryPointStrategy merge packages/*/build/docs.json --readme API_DOC.md --out packages/frontend/dist/docs",
    "test": "pnpm -r --if-present test",
    "serve": "pnpm --filter @xivgear/gearplan-frontend exec webpack serve",
    "lint": "pnpm -r exec eslint ./src/**/*.ts --exit-on-fatal-error --max-warnings 0",
    "dataschema": "pnpm --filter @xivgear/data-api-client exec swagger-typescript-api -o=./src/ -n=dataapi.ts -p=https://data.xivgear.app/swagger/xivgear-reference-data-api-0.1.yml --api-class-name=DataApiClient",
    "dataschemalocal": "pnpm --filter @xivgear/data-api-client exec swagger-typescript-api -o=./src/ -n=dataapi.ts -p=http://localhost:8085/swagger/xivgear-reference-data-api-0.1.yml --api-class-name=DataApiClient",
    "accountschema": "pnpm --filter @xivgear/account-service-client exec swagger-typescript-api -o=./src/ -n=accountsvc.ts -p=https://accountsvc.xivgear.app/swagger/xivgear-account-service-0.0.yml --api-class-name=AccountServiceClient --responses --disable-throw-on-error",
    "accountschemalocal": "pnpm --filter @xivgear/account-service-client exec swagger-typescript-api -o=./src/ -n=accountsvc.ts -p=http://localhost:8086/swagger/xivgear-account-service-0.0.yml --api-class-name=AccountServiceClient --responses --disable-throw-on-error",
    "userdataschema": "pnpm --filter @xivgear/user-data-client exec swagger-typescript-api -o=./src/ -n=userdata.ts -p=https://userdata.xivgear.app/swagger/xivgear-userdata-service-0.0.yml --api-class-name=UserDataClient --responses",
    "userdataschemalocal": "pnpm --filter @xivgear/user-data-client exec swagger-typescript-api -o=./src/ -n=userdata.ts -p=http://localhost:8087/swagger/xivgear-userdata-service-0.0.yml --api-class-name=UserDataClient --responses",
    "proxy:userdata": "node scripts/userdata-proxy.js"
  }
}
