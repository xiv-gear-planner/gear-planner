{
  "compilerOptions": {
    "target": "es2022",
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "composite": true,
    "outDir": "./build",
    "noImplicitReturns": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}